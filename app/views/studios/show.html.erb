<h2>Studio Details</h2>

<section id="attributes">
  <h3>Studio Name: </h3>
  <%= @studio.name %>
  <h4>Location: </h4>
  <%= @studio.location %>
</section>

<section id="movies">
  <h4>Movies Produced: </h4>
  <% @studio.movies.each do |movie| %>
    <p><%= movie.title %></p>
  <% end %>
</section>

<section id="actors">
  <h4>Featured Talent: </h4>
  <% @studio.movies.each do |movie| %>
    <%= "#{movie.actor_list_params}" %>
  <% end %>
</section>
